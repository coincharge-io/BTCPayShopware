<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>BTCPay Server</title>
        <input-field>
            <name>btcpayServerUrl</name>
            <label>BTCPay Server URL</label>
            <helpText>BTCPay Server URL.</helpText>
            <helpText lang="de-DE">BTCPay Server URL.</helpText>
        </input-field>
        <component name="coincharge-btcpay-generate-key">
            <name>generate</name>
        </component>
        <input-field>
            <name>btcpayApiKey</name>
            <label>BTCPay API Key</label>
            <helpText>BTCPay API Key.</helpText>
            <helpText lang="de-DE">BTCPay API Key.</helpText>
        </input-field>
        <input-field>
            <name>btcpayServerStoreId</name>
            <label>BTCPay Server Store Id</label>
            <helpText>BTCPay Server Store Id.</helpText>
            <helpText lang="de-DE">BTCPay Server Store Id.</helpText>
        </input-field>
        <component name="coincharge-btcpay-create-webhook">
            <name>webhook</name>
        </component>
        <input-field type="password">
            <name>btcpayWebhookId</name>
            <label>Webhook id</label>
            <label lang="de-DE">Webhook id</label>
        </input-field>
        <input-field type="password">
            <name>btcpayWebhookSecret</name>
            <label>Webhook secret</label>
            <label lang="de-DE">Webhook secret</label>
        </input-field>


        <component name="coincharge-btcpay-test-connection">
            <name>test</name>
        </component>

    </card>
</config>